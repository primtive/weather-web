generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type externalSource {
  temp Float
  humd Int
  pres Float
  id   Int
}

model Record {
  id              String           @id @default(auto()) @map("_id") @db.ObjectId
  time            DateTime         @default(now())
  temp_h          Float?
  humd_h          Int?
  pres_h          Int?
  temp_e          Float?
  humd_e          Int?
  pres_e          Int?
  aqi             Int?
  tvoc            Int?
  eco2            Int?
  light           Int?
  wind_dir        Int?
  wind_speed      Float?
  rain            Int?
  externalSources externalSource[]
  weatherCode     Int
  uv              Int
  isDay           Boolean
}
